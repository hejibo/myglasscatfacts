<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.zhuoweizhang.myglasscatfacts"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="1" android:targetSdkVersion="17"/>
    <!-- the permission to use the MyGlass API. 
        It's currently protected via the package signature, so you'll need to resign MyGlass 
        to try this out. :( -->
    <uses-permission android:name="com.google.glass.companion.API" />
    <application android:label="@string/app_name" >
        <activity android:name="MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest> 
